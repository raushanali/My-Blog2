<%- include('partials/header') %>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Create New Blog Post
                </h2>
            </div>
            
            <div class="card-body">
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-danger">
                        <h6><i class="fas fa-exclamation-circle me-2"></i>Please fix the following errors:</h6>
                        <ul class="mb-0">
                            <% errors.forEach(error => { %>
                                <li><%= error %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>

                <form method="POST" action="/posts">
                    <div class="mb-3">
                        <label for="title" class="form-label">
                            <i class="fas fa-heading me-2"></i>Post Title *
                        </label>
                        <input 
                            type="text" 
                            class="form-control form-control-lg" 
                            id="title" 
                            name="title" 
                            placeholder="Enter an engaging title for your blog post"
                            value="<%= locals.formData ? formData.title : '' %>"
                            required
                        >
                        <div class="form-text">Make it catchy and descriptive!</div>
                    </div>

                    <div class="mb-3">
                        <label for="author" class="form-label">
                            <i class="fas fa-user me-2"></i>Author *
                        </label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="author" 
                            name="author" 
                            placeholder="Your name"
                            value="<%= locals.formData ? formData.author : '' %>"
                            required
                        >
                    </div>

                    <div class="mb-4">
                        <label for="content" class="form-label">
                            <i class="fas fa-align-left me-2"></i>Post Content *
                        </label>
                        <textarea 
                            class="form-control" 
                            id="content" 
                            name="content" 
                            rows="10" 
                            placeholder="Share your thoughts, ideas, and stories here..."
                            required
                        ><%= locals.formData ? formData.content : '' %></textarea>
                        <div class="form-text">Write your complete blog post content here.</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/" class="btn btn-outline-secondary btn-lg me-md-2">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Publish Post
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Writing Tips Section -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-lightbulb me-2"></i>Writing Tips
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Start with a compelling introduction
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Use clear and concise language
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Break up long paragraphs
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Include examples and stories
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                End with a strong conclusion
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Proofread before publishing
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>